{
	"constants" : {

			"root"           : "static",
			"env"            : "dev",
			"store"          : "",

			"js_sources"     : "{{{root}}}/js",
			"dest_js_folder" : "{{{root}}}/js-min",

			"sass_sources"   : "{{{root}}}/sass",
			"dest_css_folder": "{{{root}}}/css-min",

			"requirejs"      : {
				"baseUrl": ".",
				"paths": {
					"main": "assets/js/app-main",
					"test": "assets/js/test-pages",
					"mod": "assets/js/modules",
					"plug": "assets/js/plugins",
					"plugins": "assets/js/plugins",
					"lib": "assets/js/libs"
				}
			}

	},

	"arguments": {"_comment" : "arguments will be filled dynamically by file keywords or commandline arguments"},
	"stores": {"_comment" : "multistore condifuration file. @see grunt-stores.json"},
	"pages" : {"_comment" : "default store pages. @see grunt-pages.json"},

	"comp-js" : {
			"dev" : {
				"cmd"  : "node",
				"args" : [".grunt/r.js","-o","baseUrl={{{baseUrl}}}","optimize=none","skipModuleInsertion=false","name={{{main}}}","out={{{dest}}}"]
			},
			"final" : {
				"cmd"  : "node",
				"args" : [".grunt/r.js","-o","baseUrl={{{baseUrl}}}","optimize=uglify2","skipModuleInsertion=false","generateSourceMaps=false","preserveLicenseComments=false","name={{{main}}}","out={{{dest}}}"]
			}
	},

	"comp-sass" : {
			"dev" : {
				"cmd"  : "sass",
				"args" : ["--update","-C","-l","{{{sass_sources}}}:{{{dest_css_folder}}}"]
			},
			"final" : {
				"cmd"  : "sass",
				"args" : ["--update","-C","-l","-t compressed","{{{sass_sources}}}:{{{dest_css_folder}}}"]
			}
	},

	"sass-watch" : {
			"dev" : {
				"cmd"  : "sass",
				"args" : ["--watch","{{{sass_sources}}}:{{{dest_css_folder}}}"]
			},
			"final" : {
				"cmd"  : "sass",
				"args" : ["--watch","-C","-l","-t compressed","{{{sass_sources}}}:{{{dest_css_folder}}}"]
			}
	}
}